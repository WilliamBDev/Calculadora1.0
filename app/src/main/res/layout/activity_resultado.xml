<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".ResultadoActivity">

    <TextView
        android:text="Seu IMC é: "
        android:layout_marginTop="16dp"
        android:textStyle="bold"
        android:textAlignment="center"
        android:textColor="@color/teal_700"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/textviewIMC"
        tools:text="imc"
        android:padding="16dp"
        android:textAlignment="center"
        android:textSize="38sp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />


    <TextView
        android:id="@+id/textviewClassificacao"
        tools:text="Classificaçao: Abaixo do peso"
        android:textSize="18sp"
        android:textAlignment="center"
        android:layout_margin="8dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <TextView
        android:layout_margin="20dp"
        android:textAlignment="center"
        android:text="VEJA A BAIXO A TABELA"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
    <TextView
        android:text="MENOR QUE 18.5 ABAIXO DO PESO"
        android:textAlignment="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
    <TextView
        android:text="ENTRE 18.5 E 24.9 PESO IDEAL"
        android:textAlignment="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
    <TextView
        android:text="ENTRE 25 E 29.9 SOBREPESO"
        android:textAlignment="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
    <TextView
        android:text="ENTRE 30 E 39.9 OBESIDADE"
        android:textAlignment="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
    <TextView
        android:text="MAIOR QUE 40 OBESIDADE GRAVE"
        android:textAlignment="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

</LinearLayout>